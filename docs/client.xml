              {isSubmitting ? 'Approving...' : 'Approve'}
            </Button>
          ) : (
            <Button variant="destructive" onClick={() => handleApprovalToggle(false)} disabled={isSubmitting}>
              {isSubmitting ? 'Unapproving...' : 'Unapprove'}
